server {
	listen 80;
	listen [::]:80;

	root /var/www/html/sites/kwi_wp;

	index index.php index.html;

	server_name {{ project_url }};

	location / {
		try_files $uri $uri/ =404;
	}

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
    	fastcgi_pass {{ hostvars[groups['php'][0]]['ansible_host'] }}:9000;
	}

	location ~ /\.ht {
		deny all;
	}
}
